<h2 class="text-center">Capture surveys</h2>

<form class="form-horizontal">
	<div class="form-group">
		<label for="startDate" class="col-sm-3 control-label">Date of survey</label>
		<div id="startDate" class="col-sm-9">
			<div class="col-sm-4">
				<select id="startMonth" name="start_month" class="form-control">
					<option value="1">January</option>
					<option value="2">February</option>
					<option value="3">March</option>
					<option value="4">April</option>
					<option value="5">May</option>
					<option value="6">June</option>
					<option value="7">July</option>
					<option value="8">August</option>
					<option value="9">September</option>
					<option value="10">October</option>
					<option value="11">November</option>
					<option value="12">December</option>
				</select>
			</div>
			
			<div class="col-sm-4">
				<select id="startYear" name="start_year" class="form-control">
					<% for(var i = new Date(Date.now()).getFullYear(); i >= 1990; i--) { %>
						<option value="<%- i %>"><%- i %></option>
					<% } %>
				</select>
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<label for="facility" class="control-label col-sm-3">Facility</label>
		<div class="col-sm-9">
			<div class="col-sm-12">
				<select id="facility" name="facility_id" class="form-control">
					<option value="1">Louis Trichardt Memorial Hospital</option>
					<option value="2">Tshilwavhusiku Health Centre</option>
				</select>
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-3 col-sm-offset-3">
			<div class="col-sm-12">
				<button type="submit" class="btn btn-primary form-control">Start capturing</button>
			</div>
		</div>
	</div>
</form>